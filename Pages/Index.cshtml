@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

<div class="text-center justify-content-center">
    <h1 class="display-4">Welcome</h1>
    <hr class="col-xs-12"/>
    <div class="form-group row col-md-9 mx-auto">
        <div class="col-sm-2">
            <label class="form-control-plaintext" style="white-space: nowrap;" for="search_id">Search ID: </label>
        </div>
        <div class="col-sm-8">
            <input class="form-control default_txtbox" type="text" name="search_id" id="search_id"/>
        </div>
        <div class="col-sm-2">
            <input class="form-control btn btn-primary default_btn" onclick="searchWithId(this)" type="button" name="search_btn" id="search_btn" value="Search"/>
        </div>
    </div>
    <textarea class="col-md-9 form-control mx-auto text-white" id="content_textbox" readonly rows="10" placeholder="Content"></textarea>
</div>